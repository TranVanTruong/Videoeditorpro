<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@drawable/divider_2" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="5dp">
        <ImageView android:id="@+id/image_preview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <Button android:background="@drawable/playbutton_grid_small" android:layout_width="30dp" android:layout_height="30dp" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="5dp">
        <com.androworld.videoeditorpro.MetaFont
            android:textSize="14dp" android:textColor="@android:color/black" android:id="@+id/file_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="video.mp4" android:singleLine="true"/>
        <com.androworld.videoeditorpro.MetaFont
            android:textSize="12dp" android:textColor="@android:color/black" android:id="@+id/duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="duration" android:singleLine="true" android:alpha="0.5"/>
    </LinearLayout>
</LinearLayout>
